server {
	server_name lemoncurry.nl www.lemoncurry.nl;
	root /usr/share/nginx/html;
    #script_alias /usr/lib/cgi-bin/;
    error_log /var/log/nginx/lemoncurry-error.log warn;
    access_log /var/log/nginx/lemoncurry-access.log ;
    location ~ \.php$ {
      # Filter out arbitrary code execution
      location ~ \..*/.*\.php$ {return 404;}

      include fastcgi_params;
      fastcgi_param  SCRIPT_FILENAME    $document_root$fastcgi_script_name;
      fastcgi_pass  unix:/tmp/php.socket;
      fastcgi_index index.php;
        }
    }
server {
    server_name adr.lemoncurry.nl;
    root /home/albert/www/lemoncurry/adressen;
    #script_alias /home/albert/www/cgi-bin/adressen/;
    location /cgi-bin/ {
        gzip off;
        alias /home/albert/www/cgi-bin/adressen/;
        fastcgi_pass  unix:/var/run/fcgiwrap.socket;
        include /etc/nginx/fastcgi_params;
        fastcgi_param SCRIPT_FILENAME  /home/albert/www/cgi-bin/adressen$fastcgi_script_name;
        }
    error_log /var/log/nginx/adr.lemoncurry-error.log error;
    access_log /var/log/nginx/adr.lemoncurry-access.log;
    }
